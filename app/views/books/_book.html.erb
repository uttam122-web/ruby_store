<div class="book">
  <h2><%= book.title %></h2>
  <p><%= format_price(book.price) %></p>
</div>

<%= form_with(model: book) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<p><%= format_price(book.price) %></p>